<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/title_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_src"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/_full"/>

            <Button
                android:id="@+id/bt_ball"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/_ball"
                android:layout_centerInParent="true"/>
            <Button
                android:id="@+id/bt_blue1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/blue"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:text="1"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/bt_blue2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="150dp"
                android:background="@mipmap/blue"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:text="2"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/bt_blue3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/blue"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="230dp"
                android:textSize="20sp"
                android:text="3"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/bt_blue4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/blue"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="310dp"
                android:textSize="20sp"
                android:text="4"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/bt_blue5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/blue"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="390dp"
                android:textSize="20sp"
                android:text="5"
                android:textColor="#ffffff"/>


            <Button
                android:id="@+id/bt_red1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/red"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="390dp"
                android:textSize="20sp"
                android:text="1"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/bt_red2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/red"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="310dp"
                android:textSize="20sp"
                android:text="2"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/bt_red3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/red"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="230dp"
                android:textSize="20sp"
                android:text="3"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/bt_red4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/red"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="150dp"
                android:textSize="20sp"
                android:text="4"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/bt_red5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/red"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="70dp"
                android:textSize="20sp"
                android:text="5"
                android:textColor="#ffffff"/>
        </RelativeLayout>

        <include
            layout="@layout/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </LinearLayout>


</RelativeLayout>
